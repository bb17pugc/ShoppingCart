@model ShoppingCart.Models.ProductSaleandUserInfoViewModel

@{
    ViewBag.Title = "Detail of Users purchased " + Model.ProductInfo.Name;
}


    <table class="table Text-Center" style="background-color:gray;color:white">
        <tr>
            <td>
                Name
            </td>

            <td>
                Price
            </td>

            <td>
                Catagory
            </td>

            <td>
                Description
            </td>

            <td>
                Product Sale Count
            </td>
        <tr />
        <tr>
            <td>
                @Html.DisplayFor(model => model.ProductInfo.Name)
            </td>

            <td>
                @Html.DisplayFor(model => model.ProductInfo.Price)
            </td>

            <td>
                @Html.DisplayFor(model => model.ProductInfo.Catagory)
            </td>

            <td class="TextAreaDisplay">
                @Html.DisplayFor(model => model.ProductInfo.Description)
            </td>

            <td>
                @Html.DisplayFor(model => model.ProductInfo.ProductSaleCount)
            </td>
        <tr/>
    </table>
<hr class="Black" />
<table class="table fixed_header">
    <thead>
        <tr style="background-color:dodgerblue;color:white">
            <th>
            </th>
            <th>
                Quantity
            </th>
            <th>
                First name
            </th>
            <th>
                LastName
            </th>
            <th>
                Date Of Birth
            </th>
            <th>
                City
            </th>
            <th>
                Country
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.UserInfoandOrderCount)
        {
            <tr>
                <td>
                    @{
                        var base64 = Convert.ToBase64String(item.UserInfo.UserPhoto);
                        var ImageSrc = string.Format("data:image/jpg;base64,{0}", base64);
                    }
                    <img src="@ImageSrc" class="circle-image" width="40" height="40" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserInfo.Email)
                </td>

                <td>
                    <a href="@Url.Action("UserProfile", "Profile", new {UserId = item.UserInfo.Id })" title="See Profile">
                        <i class="fa fa-user"></i>
                    </a>
                    |
                    <a href="@Url.Action("DeleteProfile", "Admin" ,new {UserId = item.UserInfo.Id })" title="Remove user" style="color:gray">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>

                        }
    </tbody>
</table>

