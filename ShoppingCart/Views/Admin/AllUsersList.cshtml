    {
        if ($("#" + id).is(':checked'))
        {
            debugger;
            $.ajax({
                type : "POST" ,
                url: '/Admin/AddUsersId/',
                data : {"UserId" : id} ,
                success: function (data)
                {
                    //empty
                }
            });
        }
        else
        {
             $.ajax({
                type: "POST",
                url: '/Admin/RemoveUsersId/',
                data: { "UserId": id },
                success: function (data) {
                    //empty
                }
            });
        }
        
    }

